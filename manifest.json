{
	"manifest_version": 3,
	"name": "Гриса делает расширение",
	"description": "расширение",
	"version": "1.0",
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"css": ["scripts/content.css", "modules/vanilla-calendar.min.css"],
			"js": ["modules/vanilla-calendar.min.js", "scripts/content.js"],
			"matches": ["https://upfly.bitrix24.ru/*"],
			"all_frames": true
		}
	],

	"permissions": ["activeTab", "scripting", "tabs"]
}
